<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".NguoiDung.DangKyActivity">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="328dp"
            android:layout_height="197dp"
            android:layout_marginTop="29dp"
            android:src="@drawable/img_4" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="ĐĂNG KÝ"
            android:textColor="#F44336"
            android:textSize="30sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilHoVaTen"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:hint="Họ và tên">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtHoVaTen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/user_circle"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmailOrSDT"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:hint="Nhập email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtEmailOrSDT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="5dp"
                    android:ems="10"
                    android:inputType="text|textEmailAddress|textMultiLine"
                    />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilMatKhau"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:endIconMode="password_toggle"
            android:hint="Mật khẩu">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtMatKhau"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:ems="10"
                    android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/btnDangKy"
            android:layout_width="169dp"
            android:layout_height="51dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/maubutton"
            android:text="Đăng ký"
            android:textColor="#F2FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Hoặc"
            android:textColor="#F44336" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnGoogle"
                    android:layout_width="175dp"
                    android:layout_height="79dp"
                    android:background="@drawable/buttonmautrang"
                    android:drawableLeft="@drawable/google"
                    android:drawablePadding="-10dp"
                    android:paddingLeft="15dp"
                    android:text="Google" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnFacebook"
                    android:layout_width="175dp"
                    android:layout_height="79dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/buttonmautrang"
                    android:drawableLeft="@drawable/facebook_f_logo_blue_logo_wine"
                    android:drawablePadding="-10dp"
                    android:paddingLeft="15dp"
                    android:text="Facebook" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="47dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn đã tạo tài khoản?" />

                <androidx.appcompat.widget.AppCompatButton

                    android:id="@+id/btnDangNhap"
                    android:layout_width="89dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/maubutton"
                    android:text="Đăng nhập"
                    android:textColor="#F2FFFFFF" />
        </LinearLayout>


</LinearLayout>