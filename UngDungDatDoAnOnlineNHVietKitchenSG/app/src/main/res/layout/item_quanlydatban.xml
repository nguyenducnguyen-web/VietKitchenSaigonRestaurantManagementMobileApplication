<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewnha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <!-- Trạng thái -->
            <TextView
                android:id="@+id/textView10nha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ tên khách đặt"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Tổng tiền -->

            <TextView
                android:id="@+id/txtTrangThaiDatBan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Trạng thái"
                android:textColor="@color/textColor"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/textView20nha"
                app:layout_constraintTop_toBottomOf="@+id/txtSoLuongKhach" />

            <TextView
                android:id="@+id/textView14nha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="SĐT"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView10nha" />

            <TextView
                android:id="@+id/txtSoLuongKhach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Số lượng khách"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textView21nha"
                app:layout_constraintTop_toBottomOf="@+id/txtSoDienThoaiKDB" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTuChoiDatBan"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/maubutton"
                android:text="Từ chối"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtNgayDatBanCuaKhach" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnXacNhanDatBan"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/maubutton"
                android:text="Xác nhận"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toStartOf="@+id/btnTuChoiDatBan"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtNgayDatBanCuaKhach" />

            <TextView
                android:id="@+id/txtNgayDatBanCuaKhach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Ngày đặt bàn"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTrangThaiDatBan" />

            <TextView
                android:id="@+id/textView20nha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Trạng thái"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView21nha" />

            <TextView
                android:id="@+id/textView21nha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Số lượng khách"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView14nha" />

            <TextView
                android:id="@+id/txtHoTenKhachDatBan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Họ tên"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/textView10nha"
                 />

            <TextView
                android:id="@+id/txtSoDienThoaiKDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Sdt"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/textView14nha"
                app:layout_constraintTop_toBottomOf="@+id/textView10nha" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>



